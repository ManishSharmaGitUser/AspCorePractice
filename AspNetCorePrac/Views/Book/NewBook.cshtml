@using AspNetCorePrac.Data.Enums
@model BookModel
@{
    ViewData["Title"] = "NewBook";
    var selectedValue = "Dutch";
}

@if (ViewBag.IsSuccess==true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Holy guacamole!</strong> You should check in on some of those fields below.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" asp-action="NewBook" asp-controller="Book" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        @*<label asp-for="LanguageEnm">Language</label>*@
        <label asp-for="LanguageId">Language</label>
        @*<select class="form-control" asp-for="Language">
                <option value="">Please Choose Book Language</option>
                <option value="Hindi">Hindi</option>
                <option value="English">English</option>
                <option value="Dutch">Dutch</option>
            </select>*@

        @*<select class="form-control" asp-for="Language" asp-items="new SelectList(ViewBag.Language,selectedValue)">
                <option value="">Please choose Language</option>
            </select>*@

        @*<select class="form-control" asp-for="MultiLanguage" asp-items="ViewBag.Language">
                <option value="">Please choose Languages</option>
            </select>*@

        @*<select class="form-control" asp-for="LanguageEnm" asp-items="Html.GetEnumSelectList<LanguageEnum>()">
                <option value="">Please choose Languages</option>
            </select>*@


        @*<select class="form-control" asp-for="LanguageId" asp-items="Html.GetEnumSelectList<LanguageEnum>()">
                <option value="">Please choose Languages</option>
            </select>*@


        <select class="form-control" asp-for="LanguageId" asp-items="ViewBag.Language">
            <option value="">Please choose Languages</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPages">TotalPages</label>
        <input asp-for="TotalPages" class="form-control" />
        <span asp-validation-for="TotalPages" class="text-danger"></span>
    </div>


    <div class="form-group">
        @*<label asp-for="CoverPhoto"></label>*@
        @*<div class="custom-file">
                <input asp-for="CoverPhoto" class="custom-file-input" id="customfile" />
                <label class="custom-file-label" for="customfile">Choose File</label>
            </div>*@
        <div class="mb-3">
            <label asp-for="CoverPhoto" class="form-label"></label>
            <input class="form-control" asp-for="CoverPhoto" id="formFile">
        </div>
        <span asp-validation-for="CoverPhoto" class="text-danger"></span>
    </div>


    <div class="form-group">
       
        <div class="mb-3">
            <label asp-for="GalleryFiles" class="form-label"></label>
            <input class="form-control" asp-for="GalleryFiles" id="formFile">
        </div>
        <span asp-validation-for="GalleryFiles" class="text-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-success" />
</form>

