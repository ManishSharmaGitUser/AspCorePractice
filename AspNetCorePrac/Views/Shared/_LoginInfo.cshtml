@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signinManager

@if (_signinManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button" data-toggle="dropdown">
            @*Hello - @User.Identity.Name*@
            Hello - @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)
        </a>
        <div class="dropdown-menu" arialabelledby="navbarDropdown">
            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
        </div>
    </li>
}
else
{
  <li class="nav-item">
      <a class="btn btn-outline-primary" asp-controller="Account" asp-action="login">Login</a>
      <a class="btn btn-primary" asp-controller="Account" asp-action="signup">Register</a>
  </li>
}
