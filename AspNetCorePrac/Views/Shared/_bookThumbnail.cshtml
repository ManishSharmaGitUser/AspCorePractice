@model BookModel
<div class="col-sm-4">
    <div class="card mb-4 shadow-sm">
        <img src="@Model.CoverImageUrl" class="img-thumbnail" />
        <div class="card-body">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Title Not Available" : Model.Title)</h3>
            <p class="card-text">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary" asp-route="bookDetailsRoute">
                        View Details
                    </a>
                </div>
                <small class="text-muted">@Model.Author</small>
            </div>
        </div>
    </div>
</div>
